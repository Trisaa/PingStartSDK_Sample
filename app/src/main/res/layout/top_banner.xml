<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/black"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/banner_ad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/banner_ad"
                 android:gravity="center"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/interstitial_ad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/interstitial_ad"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
             >

            <TextView
                android:id="@+id/native_ad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/native_ad"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
          >

            <TextView
                android:id="@+id/shuffle_ad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/shuffle_ad"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/image_line_tab"
        android:layout_width="75dp"
        android:layout_height="3dp"
        android:background="@drawable/tabline" />

</LinearLayout>