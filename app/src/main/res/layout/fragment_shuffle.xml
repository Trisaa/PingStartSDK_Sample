<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_gray_background_color" >

    <include
        android:id="@+id/show_ad_fresh"
        layout="@layout/show_ad_fresh" />

    <include
        android:id="@+id/native_container"
        layout="@layout/show_native"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/adShuff_BannerViewContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/show_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/show_ad_fresh"
        android:layout_centerInParent="true"
        android:background="@mipmap/ic_shuffle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/shuff_click" />

</RelativeLayout>